<Window x:Class="Campus02FirstSampleWPFAppFramework.LayoutSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Campus02FirstSampleWPFAppFramework"
        mc:Ignorable="d"
        Title="LayoutSample" Height="450" Width="800">
    <DockPanel>
    <StackPanel DockPanel.Dock="Left">
    <WrapPanel>
        <Button>Hello World</Button>
        <CheckBox>Check Me</CheckBox>
    </WrapPanel>
    <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>       
        <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--Grid.Column ist ein attached Property - wird vom Grid-Container vererbt-->
        <Image Source="/flowers-19830_1280.jpg" Width="50" Grid.Column="1" Grid.Row="0" />
            <Button>Hello Grid</Button>
    </Grid>
        <UniformGrid Columns="3" Rows="2">
            <StackPanel>
                <Button>Spalte 1 - Zeile 1</Button>
                <Button>Spalte 2 - Zeile 1</Button>
            </StackPanel>
            <StackPanel>
                <Button>Spalte 3 - Zeile 1</Button>
                <Button>Spalte 1 - Zeile 2</Button>
                <Button>Spalte 1 - Zeile 2</Button>
                <Button>Spalte 1 - Zeile 2</Button>
            </StackPanel>
            <Button>Innas Button</Button>
            <Button>noch einer Button</Button>
        </UniformGrid>
    </StackPanel>
        <StackPanel>
            <Image Source="/flowers-19830_1280.jpg" Height="50" />
            <Button Click="Button_Click" >Bitte ein neues Controll vom Typ TextBox</Button>
            <Button Content="1. Variante"></Button>
            <Button>2. Variante</Button><!-- Content ist default Property-->
            <TextBlock Text="1. Variante"/>
            <TextBlock>2. Variante</TextBlock>
            <Button  ToolTip="Hello World">
                <!-- Content ist default Property-->
                <StackPanel>
                    <Image Source="/flowers-19830_1280.jpg" Height="50" />
                    <CheckBox></CheckBox>
                </StackPanel>
            </Button>
            <Button  ToolTip="Hello World">
                <!--Property Syntax - ToolTip ist Property-->
                <!-- Content ist default Property-->
                <StackPanel>
                    <Image Source="/flowers-19830_1280.jpg" Height="50" />
                    <CheckBox></CheckBox>
                </StackPanel>
            </Button>
            <Button>
                <!-- Content ist default Property-->
                <StackPanel>
                    <Image Source="/flowers-19830_1280.jpg" Height="50" />
                    <CheckBox></CheckBox>
                </StackPanel>
                <Button.ToolTip><!--Property-Element Syntax-->
                    <StackPanel>
                        <TextBlock>Hallo ich bin ein ToolTip</TextBlock>
                        <Image Source="/flowers-19830_1280.jpg" Height="50" />
                    </StackPanel>
                </Button.ToolTip>
            </Button>
            <Expander Header="Hier mehr Details">
                <Button>
                    <!-- Content ist default Property-->
                    <StackPanel>
                        <Image Source="/flowers-19830_1280.jpg" Height="50" />
                        <CheckBox></CheckBox>
                    </StackPanel>
                    <Button.ToolTip>
                        <!--Property-Element Syntax-->
                        <StackPanel>
                            <TextBlock>Hallo ich bin ein ToolTip</TextBlock>
                            <Image Source="/flowers-19830_1280.jpg" Height="50" />
                        </StackPanel>
                    </Button.ToolTip>
                </Button>
            </Expander>
            <ListBox>
                <ListBox.Items>
                    <ListBoxItem>Barcleona</ListBoxItem>
                    <ListBoxItem>Sal</ListBoxItem>
                </ListBox.Items>
            </ListBox>
            <ListBox ItemsSource="{Binding Eigenschaften}"></ListBox>


        </StackPanel>
    </DockPanel>
</Window>
