<Window x:Class="Campus02FirstSampleWPFAppFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Campus02FirstSampleWPFAppFramework"
        mc:Ignorable="d"
        Title="Mein Hello World" Height="750" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" >
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="Datei">
                <MenuItem Header="Öffnen"/>
                <MenuItem Header="Speichern"/>
                <Separator/>
                <MenuItem Header="Beenden"/>
            </MenuItem>
        </Menu>
        <StatusBar >
            <TextBlock>Ich bin momentan Offline</TextBlock>
        </StatusBar>
        </StackPanel>
        <Menu DockPanel.Dock="Bottom" >
            <MenuItem Header="Datei">
                <MenuItem Header="Öffnen"/>
                <MenuItem Header="Speichern"/>
                <Separator/>
                <MenuItem Header="Beenden"/>
            </MenuItem>
        </Menu>
        <StackPanel Background="{Binding Farbe}">
        <StackPanel Orientation="Horizontal">
        <!--Container Controlls StackPanel, DockPanel, Grid, Canvas -->
        <Button Content="Click Me" />
        <TextBox />
        <CheckBox>Weihnachtsurlaub</CheckBox>
        <ListBox>
        <ListBox>Ekaterina</ListBox>
            <ListBox>Inna</ListBox>
        </ListBox>
        <ComboBox>
            <ListBox>Ekaterina</ListBox>
            <ListBox>Inna</ListBox>
        </ComboBox>
        <!-- DataContext muss auf ein Produkt gesetzt werden-->
        <Slider  Minimum="0" Maximum="100" Value="{Binding Preis}" />
        <TextBox Background="AliceBlue" Text="{Binding Preis, StringFormat=C}" />
        <Button Background="{Binding Farbe}" Content="Hello Campus02"/>
        <!--Fehler, weil kein Property sonder Public Field-->
        <TextBlock Text="{Binding ProduktName}" FontSize="{Binding Preis}" FontWeight="Bold" />
        <TextBlock Text="{Binding Bezeichnung}" FontSize="{Binding Preis}" FontWeight="Bold" />
        </StackPanel>
        <StackPanel>
            <Button>Hello Button 2</Button>
            <Image Source="/flowers-19830_1280.jpg" />
        </StackPanel>
    </StackPanel>
       
    </DockPanel>
</Window>
